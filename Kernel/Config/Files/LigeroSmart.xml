<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="LigeroSmart###Nodes" Required="0" Valid="1" ConfigLevel="100">
        <Description Translatable="1">Elasticsearch Nodes</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Array></Array>
        </Setting>
    </ConfigItem>
	<ConfigItem Name="LigeroSmart::LigeroSearch" Required="1" Valid="1" ConfigLevel="100">>
        <Description Translatable="1">Ligero Smart Search.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="MaxResults">9999</Item>
                <Item Key="MinScore">1</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="QueuePreferences###Z4001-QueueLanguage" Required="0" Valid="1">
        <Description Translatable="1">Language</Description>
        <Group>LigeroServiceCatalog</Group>
        <SubGroup>Frontend::Queue::Preferences</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::QueuePreferences::Language</Item>
                <Item Key="Label" Translatable="1">Ligero Language</Item>
                <Item Key="Desc" Translatable="1">Language used for Queue indexation on Ligero</Item>
                <Item Key="Block">Option</Item>
                <Item Key="PrefKey">Language</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="LigeroSmart::Index" Required="1" Valid="1" ConfigLevel="100">
        <Description Translatable="1">Index Prefix.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String>companyname</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="GenericInterface::Invoker::Module###LigeroSmart::LigeroSmartIndexer" Required="0" Valid="1">
        <Description Translatable="1">GenericInterface module registration for the invoker layer.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>GenericInterface::Invoker::Module</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Name">LigeroSmartIndexer</Item>
                <Item Key="Controller">LigeroSmart</Item>
                <Item Key="ConfigDialog">AdminGenericInterfaceInvokerDefault</Item>
            </Hash>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="LigeroSmart::LigeroSearch::Indexer###SendAttachmentsToES" Required="1" Valid="1">
        <Description Translatable="1">Index also attachments.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>GenericInterface::Invoker::Module</SubGroup>
        <Setting>
            <Option SelectedID="Yes">
                <Item Key="No" Translatable="1">No</Item>
                <Item Key="Yes" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
<ConfigItem Name="LigeroSmart::FullTextSearch###InlineQueryTemplate" Required="1" Valid="1" ConfigLevel="100">
        <Description Translatable="1">Full Search Template.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>Core::Search::Templates</SubGroup>
        <Setting>
            <TextArea>
{
		    "bool": {
		        "should": [
		            {
		                "prefix": {
		                    "_all": {
		                        "value":"{{Query}}",
		                        "boost": 10
		                    }
		                }
		            },
		            {
		                "match": {
		                    "_all": {
		                        "query":"{{Query}}"
		                    }
		                }
		            }
		        ]
		    }
}
			</TextArea>
		</Setting>
	</ConfigItem>


</otrs_config>
