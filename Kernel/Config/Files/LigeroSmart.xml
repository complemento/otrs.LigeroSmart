<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="LigeroSmart###Nodes" Required="0" Valid="1">
        <Description Translatable="1">Elasticsearch Nodes</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Array></Array>
        </Setting>
    </ConfigItem>
    

    <ConfigItem Name="LigeroSmart::LigeroSearch" Required="1" Valid="1">
        <Description Translatable="1">Ligero Smart Search.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>FullTextSearch</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Indexes">otrs</Item>
                <Item Key="Types">ticket</Item>
                <Item Key="MaxResults">9999</Item>
                <Item Key="MinScore">1</Item>
                <Item Key="Template">LigeroSearch</Item>
            </Hash>
        </Setting>
    </ConfigItem>


    <ConfigItem Name="GenericInterface::Invoker::Module###LigeroSmart::LigeroSmartIndexer" Required="0" Valid="1">
        <Description Translatable="1">GenericInterface module registration for the invoker layer.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>GenericInterface::Invoker::Module</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Name">LigeroSmartIndexer</Item>
                <Item Key="Controller">LigeroSmart</Item>
                <Item Key="ConfigDialog">AdminGenericInterfaceInvokerDefault</Item>
            </Hash>
        </Setting>
    </ConfigItem>

    <ConfigItem Name="LigeroSmart::LigeroSearch::Indexer###SendAttachmentsToES" Required="1" Valid="1">
        <Description Translatable="1">Index also attachments.</Description>
        <Group>LigeroSmart</Group>
        <SubGroup>GenericInterface::Invoker::Module</SubGroup>
        <Setting>
            <Option SelectedID="Yes">
                <Item Key="No" Translatable="1">No</Item>
                <Item Key="Yes" Translatable="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>

</otrs_config>
